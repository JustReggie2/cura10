<div id="footer" class="wrapper style2">
  <div class="container">
    <section>
      <header class="major">
        <h2>Log In Below:</h2>
        <span class="byline"></span>
      </header>
      <%= form_for @user do |f| %>
        <div class="row half">
          <div class="12u">
            <%= f.text_field :name, placeholder: "Name" %>
          </div>
        </div>
        <div class="row half">
          <div class="12u">
            <%= f.text_field :email, placeholder: "Email" %>
          </div>
        </div>
        <div class="row half">
          <div class="12u">
            <%= f.password_field :password, placeholder: "Password" %>
          </div>
        </div>
        <div class="row half">
          <div class="12u">
            <%= f.password_field :password_confirmation, placeholder: "Confirm Password" %>
          </div>
        </div>
        <div class="row half">
          <div class="12u">
            <ul class="actions">
              <li>
                <%= f.submit "Sign Up!", class: "button alt" %>
              </li>
            </ul>
          </div>
        </div>
      <% end %>
    </section>
  </div>
</div>
